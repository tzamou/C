#include<stdio.h>
#include<stdlib.h>

int main(void)
{
	char a;	
	while(true)
	{
	printf("輸入一個字元:");
	scanf("%c",&a);
	fflush(stdin);
	if(a>='0'&&a<='9')
	printf("%c是數字\n",a);

	else if(a>='a'&&a<='z')	
	printf("%c是小寫英文\n",a);
			
	else if(a>='A'&&a<='Z')
	printf("%c是大寫英文\n",a);

	else
	printf("%c是特殊符號\n",a);		
	}
	
