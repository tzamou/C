#include<stdio.h>
#include<stdlib.h>

int main(void)
{
	char w;
while(true)
{
	printf("輸入星期:");
	scanf("%c",&w);
	fflush(stdin);	
	if(w=='0')
	{
		printf("結束\n");
		break;
	}
	else
	{
		switch(w)
		{
			case '1':
			case '2':
			case '3':
			case '4':
			case '5':
				printf("今天要上班\n");
				break;
			case '6':
			case '7':
				printf("今天不用上班\n");
				break;
	
			default:
				printf("輸入錯誤\n");
		}
	}
	
	
}
	system("pause");
	return 0;
}
