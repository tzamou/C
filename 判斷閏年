#include<stdio.h>
#include<stdlib.h>

int main(void)
{
	int y;
while(true)	
	{
	printf("輸入四位數年分(輸入0結束):");
	scanf("%d",&y);
	if(y==0||y>=1000&&y<=9999)
	{
		if(y%4==0&&y%100!=0&&y%4000!=0)
		{
		printf("閏年\n");
		}
		else if(y%400==0&&y%4000!=0)
		printf("閏年\n");
		else if(y==0)
		{
		printf("結束\n");
		break;
		}
		
		else
		printf("不是閏年\n");
	}
	else
	printf("錯誤\n");
	}
	
	
	system("pause");
	return 0;
}
